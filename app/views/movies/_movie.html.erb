<div id="<%= dom_id movie %>">
  <div class="container d-flex">
    <div class="d-flex">
      <div class="col-sm-2">
      <div class="card" style="width: 12rem;height: 16rem;">
        <img class="card-img-top" src="<%= movie.thumbnail %>" alt="Card image cap" style="height:300px">
      </div>
      </div>
      <div class="col-sm-6 px-5">
        <div class="card" style="background-color: aliceblue;">
          
          <h3 class="card-title text-center"><%= movie.short_title %></h3>
          <h6 class="card-title text-center"><%= movie.genre %></h6>
          <a class="card-title text-center" href="<%= movie.imdb_link %>" style="text-decoration: none;">IMDB Rating</a>
          <h5 class="card-title text-center"><%= movie.rating %></h5>
          <p class="card-title text-center"><%= movie.director %></p>
          <p class="card-title text-center"><%= movie.creator %></p>
          <p class="card-title text-center"><%= movie.actors %></p>
          <p class="card-title text-center"><%= movie.story %></p>
          <p class="card-text"><%= movie.short_description %></p>
          
          <a href="<%= movie.mobile_hd_download_link %>" class="btn btn-primary">Download 480p<a><br><br>
          <a href="<%= movie.medium_hd_download_link %>" class="btn btn-primary">Download 720p</a><br><br>
          <a href="<%= movie.full_hd_download_link %>" class="btn btn-primary">Download 1080p</a><br><br>
          <!-- <iframe src="" title="trailer link"></iframe> -->
          <iframe width="560" height="315" src="<%= movie.trailer_link %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
          <!-- <a href="#" class="btn btn-primary form-control">Download</a> -->
        </div>
      </div>
    </div>
    </div>
  </div>
